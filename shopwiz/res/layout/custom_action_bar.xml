 <LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/action_bar_lin_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
  	android:orientation="horizontal"
  	android:layout_gravity="fill_horizontal"
  	 android:enabled="false"
  
   >
    <View
        android:layout_width="0dp"
        android:layout_weight="3"
           android:layout_height="0dp"
        
        />

    <ImageView
        android:id="@+id/product_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:adjustViewBounds="true"
        android:onClick="product_icon_clicked"
        android:src="@drawable/product_unselected" 
/>    
   <ImageView
         android:layout_width="0dp"
        android:layout_weight="2"
        android:id="@+id/shop_icon"
        android:src="@drawable/shop_unselected"
        android:layout_height="wrap_content"
        android:onClick="shop_icon_clicked"
        android:adjustViewBounds="true"
        />
    
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"        
        />
     <ImageView
         android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:id="@+id/shortlist_icon"
        android:src="@drawable/wishlist_empty"
        android:adjustViewBounds="true"
        />
    
</LinearLayout>