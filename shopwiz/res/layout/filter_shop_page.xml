    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
       android:orientation="horizontal"  >

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:weightSum="3" >

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                   >

			<LinearLayout
			    android:orientation="vertical"
			      android:id="@+id/men_txtView_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#232424">

                 
			    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M"
                    android:textColor="@color/white" />
			    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E"
                    android:textColor="@color/white" />
			    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N"
                    android:textColor="@color/white" />
			</LinearLayout>
                
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginRight="10dip"
                 android:layout_weight="1"
                 >
				<LinearLayout
			    android:orientation="vertical"
			       android:id="@+id/women_txtView_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="W"
                    android:textColor="@color/white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M"
                    android:textColor="@color/white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E"
                    android:textColor="@color/white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N"
                    android:textColor="@color/white" />
                </LinearLayout>
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginRight="10dip"
                 android:layout_weight="1"
             >
			<LinearLayout
			    android:orientation="vertical"
			      android:id="@+id/kid_txtView_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="K"
                    android:textColor="@color/white" />
