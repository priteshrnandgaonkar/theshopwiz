<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:adjustViewBounds="true"
    android:id="@+id/main_layout">
<LinearLayout 
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1"
    >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            />
        <ImageView
        android:id="@+id/prod1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/kurti1" 
         android:contentDescription="TODO"
         android:adjustViewBounds="true"
          android:layout_weight="2"/>
          <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            />
    </LinearLayout>
      <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:orientation="horizontal"
           android:layout_weight="1"
           android:weightSum="3"
           >
           <TableLayout 
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:stretchColumns="0,1"
             android:background="@drawable/rectangle_bottom"
               >
               <TableRow 
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                  >
                  
                        <TextView 
                            android:id="@+id/cost_1"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:text="cost"
                           android:gravity="left"
                           android:background="@color/red"
                           android:textColor="@color/white"/>
                   <TextView
                       	   android:id="@+id/shop_1"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:text="shop"
                           android:gravity="right"
                       />
               </TableRow>
                  <TableRow 
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   >
                  
                        <ImageView 
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/fav_icon_short"
                            android:adjustViewBounds="true"
                            android:gravity="left"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="one line prod "
                            android:gravity="right"
                            />
                 
               </TableRow>
           </TableLayout>
           
       </LinearLayout>
</LinearLayout>
<LinearLayout 
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1"
    android:background="@drawable/rectangle"
    >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            />
        <ImageView
        android:id="@+id/prod2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/kurti1" 
         android:contentDescription="TODO"
         android:adjustViewBounds="true"
          android:layout_weight="2"/>
          <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            />
    </LinearLayout>
      <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:orientation="horizontal"
           android:layout_weight="1"
           android:weightSum="3"
           android:layout_marginLeft="2dp"
           android:background="@color/cream"
           >
           <TableLayout 
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:stretchColumns="0,1"
             android:background="@drawable/rectangle_bottom"
             
               >
               <TableRow 
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                  >
                  
                        <TextView 
                            android:id="@+id/cost_2"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:text="cost"
                           android:gravity="left"
                           android:background="@color/red"
                           android:textColor="@color/white"/>
                   <TextView
                       android:id="@+id/shop_2"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:text="shop"
                           android:gravity="right"
                       />
               </TableRow>
                  <TableRow 
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   >
                  
                        <ImageView 
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/fav_icon_short"
                            android:adjustViewBounds="true"
                            android:gravity="left"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="one line prod "
                            android:gravity="right"
                            />
                 
               </TableRow>
           </TableLayout>
           
       </LinearLayout>
</LinearLayout>
   </LinearLayout>