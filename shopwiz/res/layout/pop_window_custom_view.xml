<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
     >
      <TextView 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Sort By"
             android:textColor="@color/heart_color"
             android:textSize="24sp"
             android:gravity="center"
             android:layout_marginBottom="10dp"/>
        <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/heart_color"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
       
        />
      
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:layout_marginBottom="5dp"
    	android:id="@+id/price_ascending_lin_layout_popup"
        >
        <TextView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
           	android:text="Price Ascending"
           	android:gravity="center"
           	android:layout_gravity="center"
           	android:textSize="16sp"
           	           />
        <ImageView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/price_ascend_icon"
             android:layout_marginRight="15dp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginRight="15dp"
        />
       <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:layout_marginTop="5dp"
    	android:layout_marginBottom="5dp"
    	android:id="@+id/price_descending_lin_layout_popup"
        >
        <TextView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
           	android:text="Price Descending"
           	android:gravity="center"
           	android:layout_gravity="center"
           	android:textSize="16sp"
           	           />
        <ImageView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/descend_icon"
            android:layout_marginRight="15dp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginRight="15dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:layout_marginTop="5dp"
    	android:layout_marginBottom="5dp"
    	android:id="@+id/trending_lin_layout_popup"
        >
        <TextView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
           	android:text="Trending"
           	android:gravity="center"
           	android:layout_gravity="center"
           	android:textSize="16sp"
           	           />
        <ImageView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/trending_icon"
            android:layout_marginRight="15dp"
            />
    </LinearLayout>

</LinearLayout>
<ImageView 
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:src="@drawable/ic_canel"
    android:layout_marginTop="0dp"
    android:id="@+id/cancel_image_popup"

    />
</FrameLayout>