<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
  android:layout_height="fill_parent"
    >
<LinearLayout
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:id="@+id/lin_front_shop_description"
  android:weightSum="3">
  <ImageView 
      android:layout_width="match_parent"
      android:layout_height="0dip"
      android:layout_weight="1"
      android:id="@+id/img_shop_selected"
      
      />
   <View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:background="@color/black"/>
  <TableLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="2"
      android:id="@+id/tableLayout_shop_description"
      >
      <TableRow 
          android:layout_width="match_parent"
      android:layout_height="wrap_content"
          >
          <TextView
               android:text="Name" 
                android:layout_width="wrap_content"
                />
             <View
    android:layout_width="1dp"
    android:layout_height="match_parent"
    android:background="@color/black"/>
             <TextView
                 android:id="@+id/shop_name_tablerow"
               android:layout_weight="1"
               android:text="brand name" 
                />
      </TableRow>
      <TableRow 
          android:layout_width="match_parent"
      android:layout_height="wrap_content"
          >
          <TextView
               android:text="Address" 
               android:layout_width="wrap_content"
                />
             <View
    android:layout_width="1dp"
    android:layout_height="match_parent"
    android:background="@color/black"/>
             <TextView
                 android:id="@+id/shop_address_tablerow"
               android:layout_weight="1"
               android:text="address" 
               android:layout_width="wrap_content"
                android:inputType="textMultiLine"
                />
      </TableRow>
      <TableRow 
          android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/tablerow_landline"
          >
          <TextView
               android:text="Landline" 
                android:layout_width="wrap_content"
                />
             <View
    android:layout_width="1dp"
    android:layout_height="match_parent"
    android:background="@color/black"/>
             <TextView
                 android:id="@+id/shop_landline_tablerow"
               android:layout_weight="1"
               android:text="landline" 
               android:autoLink="phone"
                />
             
      </TableRow>
    <TableRow 
          android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/tablerow_mobile"
          >
          <TextView
               android:text="Mobile" 
                android:layout_width="wrap_content"
                />
             <View
    android:layout_width="1dp"
    android:layout_height="match_parent"
    android:background="@color/black"/>
             <TextView
                 android:id="@+id/shop_mobile_tablerow"
               android:layout_weight="1"
               android:text="mobile" 
               android:autoLink="phone"
                />
             
      </TableRow>  
       <TableRow 
          android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/tablerow_website"
          >
          <TextView
               android:text="Website" 
                android:layout_width="wrap_content"
                />
             <View
    android:layout_width="1dp"
    android:layout_height="match_parent"
    android:background="@color/black"/>
             <TextView
                 android:id="@+id/shop_website_tablerow"
               android:layout_weight="1"
               android:text="Website" 
               android:autoLink="web"
                />
      </TableRow>
      <TableRow 
          android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/tablerow_description"
          >
          <TextView
              
               android:text="Description" 
                android:layout_width="wrap_content"
                />
             <View
    android:layout_width="1dp"
    android:layout_height="match_parent"
    android:background="@color/black"/>
             <TextView
                 android:id="@+id/shop_description_tablerow"
               android:layout_weight="1"
               android:layout_width="wrap_content"
               android:text="description" 
                android:inputType="textMultiLine"
                />
      </TableRow>
      
  </TableLayout>
   <View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:background="@color/black"/>
  </LinearLayout>
  </ScrollView>